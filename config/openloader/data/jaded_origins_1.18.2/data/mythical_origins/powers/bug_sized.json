{
    "name": "Bug Sized",
    "description": "Your fairy genes make you extremely tiny. So you cant jump over blocks without flying.",
    "type": "origins:action_on_callback",
    "entity_action_chosen": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:base 0.5"
            },
            {
                "type": "origins:delay",
                "action": {
                    "type": "origins:execute_command",
                    "command": "scale set pehkui:reach 1.5"
                },
                "ticks": 20
            }
        ]
    },
    "execute_chosen_when_orb": true,
    "entity_action_lost": {
        "type": "origins:execute_command",
        "command": "scale reset"
    },
    "entity_action_respawned": {
        "type": "origins:and",
        "actions": [
            {
                "type": "origins:execute_command",
                "command": "scale set pehkui:base 0.5"
            },
            {
                "type": "origins:delay",
                "action": {
                    "type": "origins:execute_command",
                    "command": "scale set pehkui:reach 1.5"
                },
                "ticks": 20
            }
        ]
    }
}